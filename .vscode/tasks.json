{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "java",
            "type": "shell",
            "command": "java",
            "args": [
                "${fileBasename}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            }
        },
        {
            "label": "c-gnu",
            "type": "shell",
            "command": "gcc",
            "windows": {
                "args": [
                    "${fileBasename}",
                    "-o",
                    "${fileBasenameNoExtension}",
                    ";",
                    "./${fileBasenameNoExtension}.exe",
                    ";",
                    "rm",
                    "${fileBasenameNoExtension}.exe"
                ]
            },
            "linux": {
                "args": [
                    "${fileBasename}",
                    "-o",
                    "${fileBasenameNoExtension}",
                    "-lm",
                    "&&",
                    "./${fileBasenameNoExtension}",
                    "&&",
                    "rm",
                    "${fileBasenameNoExtension}"
                ]
            },
            "options": {
                "cwd": "${fileDirname}"
            }
        },
